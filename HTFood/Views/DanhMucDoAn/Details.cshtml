@model HTFood.Models.DanhMucDoAn
@using HTFood.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!---->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Sản phẩm</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sản phẩm cửa hàng:</li>
                    </ul>
                </div>
            </div>
             <!---->
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Tên sản phẩm</th>
                                <th>Hình ảnh</th>
                                <th>Đơn giá</th>


                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>No.</th>
                                <th>Tên sản phẩm</th>
                                <th>Hình ảnh</th>
                                <th>Đơn giá</th>


                                <th>Thao tác</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{int i = 1;}
                            @foreach (DoAn doan in ViewBag.da)
                            {

                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @Html.ActionLink(doan.TenDA, "Details", new { id = doan.MaDA })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => doan.AnhDA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => doan.DonGia)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Delete","DoAn", new { id = doan.MaDA })" title="Xóa"><i class="material-icons">delete_forever</i></a>
                                    </td>

                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </section>
            <script src="~/assets/js/chartjs/loader.js"></script>
            <script src="~/assets/js/buttons/vendorscripts.bundle.js"></script>
            <script src="~/assets/js/buttons/datatablescripts.bundle.js"></script>
            <script src="~/Scripts/jquery-3.3.1.min.js"></script>

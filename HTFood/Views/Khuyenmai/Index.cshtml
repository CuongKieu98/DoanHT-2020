@model IEnumerable<HTFood.Models.Khuyenmai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Header-->
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-sm-7">
                        <h2>Chương trình khuyến mãi</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Khuyến mãi</li>
                        </ul>
                    </div>
                </div>
                <!--/Header-->
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="AlertBox" class="alert @TempData["AlertType"] hidden">

                        <strong>@TempData["AlertMessage"]</strong>
                    </div>

                }

                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h2> Tất cả cửa hàng <small>Lọc cửa hàng...tìm kiếm</small> </h2>
                                <ul class="header-dropdown m-r--5">
                                    <li class="dropdown">
                                        <a href="@Url.Action("Create","Khuyenmai")" class="btn  btn-raised g-bg-gy waves-effect">Thêm mới</a>
                                    </li>
                                </ul>
                            </div>

                            <div class="body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Khuyến mãi</th>

                                                <th>Mô tả</th>
                                                <th>Ngày bắt đầu</th>
                                                <th>Ngày kết thúc</th>

                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>No.</th>
                                                <th>Khuyến mãi</th>

                                                <th>Mô tả</th>
                                                <th>Ngày bắt đầu</th>
                                                <th>Ngày kết thúc</th>

                                                <th>Thao tác</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @{int i = 1;}
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@i</td>
                                                    <td>
                                                        <a href="@Url.Action("Details", "Khuyenmai", new { id = item.MaKM })">
                                                            @Html.DisplayFor(modelItem => item.TenKM)

                                                        </a>

                                                    </td>
                                                    <td>
                                                        @Html.Raw(item.MotaKM)
                                                    </td>

                                                    <td>    @(((DateTime)item.TgBatDau).ToString("dd-MMM-yyyy"))</td>

                                                    <td>
                                                        @(((DateTime)item.TgKetThuc).ToString("dd-MMM-yyyy"))
                                                    </td>


                                                    <td>
                                                        <a href="@Url.Action("Delete","Khuyenmai", new { id = item.MaKM  })" title="Xóa"><i class="material-icons">delete_forever</i></a>
                                                    </td>

                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </section>

                <script src="~/assets/js/buttons/vendorscripts.bundle.js"></script>
                <script src="~/assets/js/buttons/datatablescripts.bundle.js"></script>
                <script src="~/Scripts/jquery-3.3.1.min.js"></script>
                @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>*@

@model List<HTFood.Models.ChiTietKhuyenMai>
@using HTFood.Models

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<title>Thông tin khuyến mãi</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Khách hàng</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DoAn")">Khuyến mãi</a></li>

                    </ul>
                </div>
            </div>
            <!--/Header-->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>sales</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>

                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>

                                            <th>Mã Khuyến mãi: </th>
                                            <th>Tên KM</th>
                                            <th>Mô tả KM</th>
                                            <th>Bắt đầu</th>
                                            <th>Kết thúc</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@ViewBag.MaKM</td>

                                            <td>@ViewBag.TenKM </td>
                                            <td class="txt-oflo">@ViewBag.Mota</td>
                                            <td><span class="text-success">@ViewBag.Batdau</span></td>
                                            <td>@ViewBag.KetThuc</td>
                                        </tr>

                                    </tbody>
                                </table>


                            </div>
                            <div class="row sales-report">
                                <div class="col-md-6 col-sm-6 col-xs-6">

                                    <p>SALES DETAIL:</p>
                                </div>

                            </div>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane in active show" id="home_with_icon_title">
                                    <b>Sản phẩm khuyến mãi</b>
                                    <p>
                                        <div class="body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">

                                                    <thead>
                                                        <tr>
                                                            <th>No.</th>
                                                            <th>Sản phẩm</th>
                                                            <th>Số lượng KM</th>
                                                            <th>Khuyến mãi</th>
                                                            <th>Cửa hàng</th>
                                                        </tr>
                                                    </thead>
                                                    <tfoot>
                                                        <tr>
                                                            <th>No.</th>
                                                            <th>Sản phẩm</th>
                                                            <th>Số lượng KM</th>
                                                            <th>Khuyến mãi</th>
                                                            <th>Cửa hàng</th>
                                                        </tr>
                                                    </tfoot>
                                                    <tbody>


                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>1</td>
                                                                <td>
                                                                    @{ 
                                                                            
                                                                         List<string> name = ViewBag.nameDa;
                                                                    }
                                                                    
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.SoLuongKM)
                                                                </td>
                                                                <td>
                                                                    @String.Format("{0:N}", item.GiaKM)
                                                                </td>
                                                                <td>
                                                                
                                                                </td>
                                                            </tr>
                                                           
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
